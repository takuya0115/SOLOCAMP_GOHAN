<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/error', model: @user %>
    <h2>情報編集</h2>
    <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :メールアドレス %>
        <%= f.text_area :email, class: "form-control email" %>
      </div>
      <div class="form-group">
        <%= f.submit "編集完了", class: 'btn btn-success' %>
        <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger float-right font-weight-bold" %>
      </div>
    <% end %>
  </div>
</div>