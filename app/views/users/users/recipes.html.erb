<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-2 ">
  		<h3>投稿レシピ</h3>

      <% @recipes.each do |recipe| %>
        <tr>
          <td>
            <% if recipe.recipe_image.attached? %>
              <%= image_tag recipe.recipe_image, size:'100x100' %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %>
          </td>
          <td>
            <%= link_to recipe.cooking_name,recipe, class: "recipe_#{recipe.id}" %>
          </td>
          <td>
            <% if recipe.user == current_user %>
              <%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-sm btn-success edit_recipe_#{recipe.id}" %>
              <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_recipe_#{recipe.id}" %></td>
            <% end %> <%#= render "users/favorites/btn", recipe: recipe %>
          </td>
        </tr>
      <% end %>