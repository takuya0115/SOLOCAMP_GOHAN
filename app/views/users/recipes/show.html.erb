<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-10 col-mx-auto">
      <h3 class="m-3">レシピ詳細</h3>
      	<table class='table'>
      	  <tr class="table-info"><th>投稿ユーザー</th></tr>
      	  <tr>
      	    <td><%= link_to(@recipe.user) do %>
              <%= @recipe.user.name %>
              <% end %>
            </td>
          </tr>
          <tr class="table-info"><th>料理名</th><tr>
          <tr><td><%= @recipe.cooking_name %></td></tr>
      	  <tr class="table-info"><th>材料</th></tr>
      	  <tr><td><%= @recipe.material %></td></tr>
      	  <tr class="table-info"><th>作り方</th></tr>
      	  <tr><td><%= @recipe.making %></td></tr>
      	  <tr class="table-info"><th>作成時間</th></tr>
      	  <tr><td><%= @recipe.make_time %></td></tr>
        </table>

        <div class="col-sm-12 col-md-8 col-mx-auto">
          <h5 class="mt-3">完成画像<h5>
          <% if @recipe.recipe_image.attached? %>
            <%= image_tag @recipe.recipe_image, size:'200x200' %>
          <% else %>
            <%= image_tag asset_path('no_image.jpg'), size: "100x100" %>
          <% end %>
        </div>

        <div class="row mt-5">
          <ul id="comment_area1">
            <%= render partial: 'users/comments/index', locals: { comments: @comments } %>
          </ul>
          <hr>
          <% if user_signed_in? %>
            <% if current_user.name != "guestuser" %>
            <div class="commment-create">
              <h4 class="text-left">コメント投稿</h4>
                <%= render 'layouts/error', model: @comment %>
                <%= render partial: 'users/comments/form', locals: { comment: @comment, recipe: @recipe } %>
            </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>