<div class="container">
  <div class="row">
    <div class="col-4 mt-3">
      <h3>フォロワー一覧</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mx-auto mt-4">
      <table class="table table-hover">
      <% @user.followers.each do |user| %>
        <tr>
          <td><%= user.name %>さん</td>
          <td><%= link_to '詳細ページへ', user_path(user) %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>