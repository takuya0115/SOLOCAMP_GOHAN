<% if recipe.favorited_by?(current_user) %>
  <%= link_to recipe.favorites.count, recipe_favorites_path(recipe), method: :delete, remote: true, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to recipe.favorites.count, recipe_favorites_path(recipe), method: :post, remote: true, class: "glyphicon glyphicon-heart-empty" %>
<% end %>