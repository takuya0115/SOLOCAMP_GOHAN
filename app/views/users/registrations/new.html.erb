<div class="container">
  <div class="row">
    <%= render "users/shared/error_messages", resource: resource %>
  </div>
  <div class="row">
    <h3 class="col-3 text-center mt-3">新規会員登録</h3>
    <div class="col-sm-12 mt-5">
      <%= form_with model: @user, url: user_registration_path, method: :post,  local:true do |f| %>

        <div class="form-group row">
          <%= f.label :名前, class: 'col-sm-3 control-label' %><br />
          <%= f.text_field :name, autofocus: true, class: 'rounded col-sm-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: 'col-sm-3 control-label' %><br />
          <%= f.email_field :email, class: 'rounded col-sm-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（6文字以上）, class: 'col-sm-3 control-label' %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "rounded col-sm-3 password" %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（確認用）, class: 'col-sm-3 control-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded col-sm-3 password_confirm" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録",class: "btn btn-success col-sm-3 mx-auto d-block" %>
        </div>

      <% end %>
      <div class="col-2">
        <p class="mt-3 ml-2 text-center under1">既に登録済みの方</p>
      </div>

      <div class="col-12 ml-5">
        <%= link_to "こちら", new_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
</div>
