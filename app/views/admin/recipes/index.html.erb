<div class="container">
  <div class="row">
    <div class="mt-3 mb-4">
      <h4>レシピ一覧</h4>
    </div>
    <div class="col-xs-10 w-100 mt-3">
      <table class="table table-borderless justify-center">
        <thead>
          <tr class="table-active">
            <th>レシピID</th>
            <th>料理名</th>
            <th>投稿ユーザー</th>
            <th>完成画像</th>
          </tr>
        </thead>
        <tbody>
          <% @recipes.each do |recipe| %>
            <tr>
              <td><%= recipe.id %></td>
              <td><%= link_to recipe.cooking_name, admin_recipe_path(recipe) %></td>
              <td><%= link_to recipe.user.name, admin_user_path(recipe.user) %></td>
              <td>
                <% if recipe.recipe_image.attached? %>
                  <%= image_tag recipe.recipe_image, size:'100x100' %>
                <% else %>
                  <%= image_tag asset_path('no_image.jpg'), size: "100x100" %>
                <% end %>
              </td>
              <td>
                <%= link_to '編集', edit_admin_recipe_path(recipe), class: "btn btn-sm btn-success edit_recipe_#{recipe.id}" %>
                <%= link_to '削除', admin_recipe_path(recipe), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_recipe_#{recipe.id}" %></td>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
