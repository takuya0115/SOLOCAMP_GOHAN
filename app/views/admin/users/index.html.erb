<div class="container">
  <div class="row">
    <div class="col-2 mt-3">
      <h4 class="text-center">ユーザー一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto mt-4">
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id), class: "border-bottom text-dark" %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  <p class="text-success font-weight-bold">入会中</p>
                <% else %>
                  <p class="text-secondary font-weight-bold">退会</p>
                <% end %>
              </td>
              <td>
                <%= link_to "退会情報の変更", edit_admin_user_path(user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%#= paginate @customers %>
    </div>
  </div>
</div>